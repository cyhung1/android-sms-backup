            android:name="com.kelviomatias.smsbackup.BackupActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_backup"
            android:parentActivityName="com.kelviomatias.smsbackup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kelviomatias.smsbackup.MainActivity" />
